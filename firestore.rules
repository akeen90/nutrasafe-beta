rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow access to user's subcollections
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // User-added foods collection (manually entered foods)
    // Any authenticated user can read all user-added foods
    // Users can only write if authenticated (profanity check done server-side)
    match /userAdded/{foodId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.foodName is string
        && request.resource.data.foodName.size() > 0
        && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // AI manually added foods collection (foods found via "Find with AI" feature)
    // Any authenticated user can read all AI-enhanced foods
    // Users can create if authenticated (profanity check done server-side)
    match /aiManuallyAdded/{foodId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.foodName is string
        && request.resource.data.foodName.size() > 0
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.isAIEnhanced == true;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // AI enhanced foods collection (foods enhanced from detail page)
    // Any authenticated user can read all AI-enhanced foods
    // Users can create if authenticated
    match /aiEnhanced/{foodId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.originalFoodName is string
        && request.resource.data.originalFoodName.size() > 0
        && request.resource.data.improvedBy == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.improvedBy == request.auth.uid;
    }

    // Public read access for app configuration
    match /config/{document} {
      allow read: if true;
      allow write: if false;
    }
  }
}