rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to food photos for admin verification
    match /food-photos/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only functions can write
    }

    // Allow users to read/write their own weight photos
    match /weightPhotos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own use-by item photos
    match /useByItemPhotos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default rule - deny access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}