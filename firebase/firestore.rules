rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Foods collection - main collection
    // Public read access for app searches, write restricted to authenticated admins only
    match /foods/{foodId} {
      allow read: if true;  // Public read for search functionality
      allow write: if isAdmin();  // Only admins can modify food database
    }

    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow access to user's subcollections
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // User-added foods collection (manually entered foods)
    // Public read access, write restricted to authenticated admins only
    match /userAdded/{foodId} {
      allow read: if true;  // Public read for search functionality
      allow write: if isAdmin();  // Only admins can modify
    }

    // AI manually added foods collection (foods found via "Find with AI" feature)
    // Public read access, write restricted to authenticated admins only
    match /aiManuallyAdded/{foodId} {
      allow read: if true;  // Public read for search functionality
      allow write: if isAdmin();  // Only admins can modify
    }

    // AI enhanced foods collection (foods enhanced from detail page)
    // Public read access, write restricted to authenticated admins only
    match /aiEnhanced/{foodId} {
      allow read: if true;  // Public read for search functionality
      allow write: if isAdmin();  // Only admins can modify
    }

    // Verified foods collection (admin-managed, high-quality verified foods)
    // Public read access, write restricted to authenticated admins only
    match /verifiedFoods/{foodId} {
      allow read: if true;  // Public read for search functionality
      allow write: if isAdmin();  // Only admins can modify
    }

    // Cleansed foods collection (foods that have been cleaned/validated)
    // Public read access, write restricted to authenticated admins only
    match /cleansedFoods/{foodId} {
      allow read: if true;  // Public read for search functionality
      allow write: if isAdmin();  // Only admins can modify
    }

    // Public read access for app configuration
    match /config/{document} {
      allow read: if true;
      allow write: if false;
    }

    // Fasting plans - users can only access their own plans
    match /fasting_plans/{planId} {
      // Allow create if the user_id matches the authenticated user
      allow create: if request.auth != null &&
                     request.resource.data.user_id == request.auth.uid;
      // Allow read, update, delete only if user owns the document
      // Legacy null user_id documents removed - all must have proper user_id
      allow read, update, delete: if request.auth != null &&
                                    resource.data.user_id == request.auth.uid;
    }

    // Fasting sessions - users can only access their own sessions
    match /fasting_sessions/{sessionId} {
      allow read, write: if request.auth != null &&
                          request.resource.data.user_id == request.auth.uid;
      allow read: if request.auth != null &&
                    resource.data.user_id == request.auth.uid;
    }

    // Fasting notifications - users can only access their own notifications
    match /fasting_notifications/{notificationId} {
      allow create: if request.auth != null &&
                      request.resource.data.user_id == request.auth.uid;
      allow read, update, delete: if request.auth != null &&
                                    resource.data.user_id == request.auth.uid;
    }

    // Fasting settings - users can only access their own settings
    match /fasting_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Cookie consent collection - allow anonymous writes for GDPR compliance logging
    match /cookie_consents/{consentId} {
      // Allow anyone to create consent records (website visitors)
      allow create: if request.resource.data.keys().hasAll(['choice', 'timestamp', 'userAgent']) &&
                      request.resource.data.choice in ['accepted', 'rejected'] &&
                      request.resource.data.timestamp is timestamp;
      // No read or update access (write-only for privacy)
      allow read, update, delete: if false;
    }
  }
}